@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "_RegisterLayout"; // Ensure this is your updated layout file
}





<div class="container">
        <div class="form-section">
            <h2>Create Account</h2>
        <p><a asp-action="Index" asp-controller="Home">Home</a></p>
            <form asp-action="Register" asp-controller="Account" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="input-group">
                    <label asp-for="FirstName"></label>
                    <input class="text" asp-for="FirstName" placeholder="First Name" required />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="input-group">
                    <label asp-for="LastName"></label>
                    <input class="text" asp-for="LastName" placeholder="Last Name" required />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="input-group">
                    <label asp-for="PhoneNumber"></label>
                    <input class="text" asp-for="PhoneNumber" placeholder="Phone Number" required />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="input-group">
                    <label asp-for="Email">Email Address</label>
                    <input class="em" type="email" asp-for="Email" placeholder="Email" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="input-group">
                    <label asp-for="Password"></label>
                    <input class="pass" asp-for="Password" placeholder="Password" required />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="input-group">
                    <label asp-for="ConfirmedPassword"></label>
                    <input class="pass" asp-for="ConfirmedPassword" placeholder="Confirm Password" required />
                    <span asp-validation-for="ConfirmedPassword" class="text-danger"></span>
                </div>

                <div class="input-group">
                    <label asp-for="DateOfBirth"></label>
                    <input class="pass" asp-for="DateOfBirth" type="date" required />
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Gender"></label>
                    <select asp-for="Gender" class="form-control">
                        <option value="">Select Gender</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>

               

                <input class="sub" type="submit" value="Sign Up">
                <p>Have an Account? <a asp-action="LogIn" asp-controller="Account">Sign in</a></p>
            </form>
        </div>
    </div>


@section Style {
        <link rel="stylesheet" href="/css/newregister.css">
}


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
