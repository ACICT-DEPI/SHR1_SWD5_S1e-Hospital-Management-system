@model RegisterViewModel 
@{
    ViewData["Title"] = "Register";
    Layout = "_RegisterLayout";
}

<div class="box-three">
    <form asp-action="Register" asp-controller="Account" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>

        <label class="l-1" asp-for="FirstName"></label> <br>
        <input class="text" asp-for="FirstName">
        <span asp-validation-for="FirstName" class="text-danger"></span>


        <label class="l-1" asp-for="LastName"></label> <br>
        <input class="text" asp-for="LastName">
        <span asp-validation-for="LastName" class="text-danger"></span>

        <label class="l-1" asp-for="PhoneNumber"></label> <br>
        <input class="text" asp-for="PhoneNumber">
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>

        <label class="l-3" asp-for="Email">Email Address</label> <br>
        <input class="em" type="email" asp-for="Email">
        <span asp-validation-for="Email" class="text-danger"></span>

        <label class="l-2" asp-for="Password"></label> <br>
        <input class="pass" asp-for="Password">
        <span asp-validation-for="Password" class="text-danger"></span>

        <label class="l-2" asp-for="ConfirmedPassword"></label> <br>
        <input class="pass" asp-for="ConfirmedPassword">
        <span asp-validation-for="ConfirmedPassword" class="text-danger"></span>

        <label class="l-2" asp-for="DateOfBirth"></label> <br>
        <input class="pass" asp-for="DateOfBirth" value="@DateTime.Now">
        <span asp-validation-for="DateOfBirth" class="text-danger"></span>

        @* <label class="l-2" asp-for="Gender"></label> <br>
        <input class="pass" asp-for="Gender">
        <span asp-validation-for="Gender" class="text-danger"></span> *@
        <div class="form-group">
            <label asp-for="Gender"></label>
            <select asp-for="Gender" class="form-control">
                <option value="">Select Gender</option>
                <option value="Male">Male</option>
                <option value="Female">Female</option>
            </select>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>

        <input class="sub" type="submit" value="Sign Up">
        <p>Have Account? <a asp-action="LogIn" asp-controller="Account">Sign in</a></p>

    </form>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}