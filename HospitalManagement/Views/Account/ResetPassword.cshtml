@model ResetPasswordVM
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_ForgetLayout.cshtml";
}

<div class="box-two">
    <form asp-action="ResetPassword" asp-controller="Account" method="post">

        <div asp-validation-summary="All" class="text-danger"></div>

        <label class="l-1" asp-for="Password"></label> <br>
        <input class="text" asp-for="Password">
        <span asp-validation-for="Password" class="text-danger"></span>
        <label class="l-1" asp-for="ConfrimPassword"></label> <br>
        <input class="text" asp-for="ConfrimPassword">
        <span asp-validation-for="ConfrimPassword" class="text-danger"></span>
        <input type="hidden" asp-for="Email" />
        <input type="hidden"  asp-for="Code" />
        
        <input class="sub" type="submit" value="Confirm">

        <p>  <a asp-action="ForgetPassword" asp-controller="Account">resend email?</a></p>
    </form>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

