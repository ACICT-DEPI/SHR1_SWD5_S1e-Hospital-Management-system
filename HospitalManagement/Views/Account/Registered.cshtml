@{
    ViewData["Title"] = "Registered";
    Layout = "_RegisterLayout"; // Ensure this is your updated layout file
}

<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            margin: 0;
            font-family: 'Open Sans', sans-serif;
            background-color: #cce7f0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh; /* Full height to center content */
        }

        .container {
            background-color: #ffffff;
            border-radius: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 40px;
            max-width: 600px; /* Adjust as necessary */
            width: 100%;
            text-align: center; /* Center text */
        }

        h2 {
            margin-bottom: 20px;
            color: #333;
        }

        p {
            margin: 10px 0;
            color: #666;
            font-size: 18px; /* Adjust font size */
        }

        .link {
            display: block;
            margin-top: 20px;
            color: #00a3c8;
            text-decoration: none;
            font-size: 16px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Registration Successful</h2>
        <p>Please check your email to confirm your account.</p>
        <a class="link" asp-action="LogIn" asp-controller="Account">Return to Login</a>
    </div>
</body>
</html>
