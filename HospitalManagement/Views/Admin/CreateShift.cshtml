@model CreateShiftVm
@{
    ViewData["Title"] = "CreateShift";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";

}



@section Style {
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/newregister.css">
}



<div class="container">
    <div class="form-section">
        <h2>Create schedule</h2>

        <form asp-action="CreateShift" asp-controller="Admin" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="input-group">
                <label asp-for="StartTime"></label>
                <input class="pass" asp-for="StartTime"  required />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            <div class="input-group">
                <label asp-for="EndTime"></label>
                <input class="pass" asp-for="EndTime" required />
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ShiftType"></label>
                <select asp-for="ShiftType" class="form-control">
                    <option value="">Select type</option>
                    <option value="0">Morning</option>
                    <option value="1">Afternoon</option>
                    <option value="2">Night</option>
                </select>
                <span asp-validation-for="ShiftType" class="text-danger"></span>
            </div>
            

            <input class="sub" type="submit" value="Create">

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}




