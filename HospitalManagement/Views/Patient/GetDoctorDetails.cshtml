@using Hospital.DAL.Entities
@model Doctor
@{
    ViewData["Title"] = "GetDoctorDetails";
    Layout = "~/Views/Shared/_DoctorDetailsLayout.cshtml";
}

<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            <h3>Person Information</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <!-- Personal Info -->
                <div class="col-md-6 col-sm-12">
                    <h5>Basic Information</h5>
                    <p><strong>Name:</strong>@Model.FirstName @Model.LastName</p>
                    <p><strong>Gender:</strong> @Model.Gender</p>
                    <p><strong>Email:</strong> @Model.Email</p>
                </div>

                <!-- Additional Info -->
                <div class="col-md-6 col-sm-12">
                    <h5>Schedule</h5>
                    @if (Model.Schedules != null)
                    {


                        @foreach (var sec in Model.Schedules)
                        {
                            <p><strong>available:</strong>@sec.Day |@sec.Status</p>

                        }
                    }

                </div>
            </div>

            <div class="row mt-4">
                <!-- Job Info -->
                @* <div class="col-md-6 col-sm-12">
                    <h5>Job Information</h5>
                    <p><strong></strong> Software Engineer</p>
                    <p><strong>Company:</strong> ABC Corp</p>
                </div> *@

                <!-- Contact Info -->
                <div class="col-md-6 col-sm-12">
                    <h5>Contact Details</h5>
                    <p><strong>Phone:</strong> @Model.PhoneNumber</p>
                    
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap JS and dependencies -->
@section Scripts{
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
}


